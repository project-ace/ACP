COMMAND=${0##*/}
NETDEV=@NETDEV@
prefix=@prefix@
exec_prefix=@exec_prefix@
INCLUDEDIR=@includedir@
LIBDIR=@libdir@
LIBS=@LIBS@
LIBS_UDP="-lacpml -lacpbl_udp"
LIBS_IB="-lacpml -lacpbl_ib"
LIBS_TOFU="-lacpml -lacpbl_tofu"
OPTIONS=
SOURCES=
OUTFILE=
MODE="link"

case $COMMAND in
	acpcc | acpgcc)
		COMPILER=gcc
		;;
	acpicc)
		COMPILER=icc
		;;
	acpc++ | acpg++ | acpcxx | acpgxx | acpCC)
		COMPILER=g++
		;;
	acpicpc)
		COMPILER=icpc
		;;
	acpfc)
		COMPILER=gfortran
		;;
	acpifort)
		COMPILER=ifort
		;;
esac

while [ $# -ge 1 ]; do
	case $1 in
		--help)
		${COMPILER} --help
		exit 0
		;;
		-c)
		MODE="compile"
		shift;;
		-o)
		OUTFILE="$2"
		shift 2;;
		--output=*)
		OUTFILE="${1##*=}"
		shift;;
		-ndev)
		NETDEV="$1"
		shift;;
		-I)
		INCLUDEDIR="$INCLUDEDIR $1 $2"
		shift 2;;
		-I*)
		INCLUDEDIR="$INCLUDEDIR $1"
		shift;;
		-L)
		LIBDIR="$LIBDIR $1 $2"
		shift 2;;
		-L*)
		LIBDIR="$LIBDIR $1"
		shift;;
		-l)
		LIBS="$LIBS $1"
		shift;;
		-[A-z]*)
		if [ "$2" = -[A-z]* ]; then
			OPTIONS="$OPTIONS $1"
			shift
		else
			OPTIONS="$OPTIONS $1 $2"
			shift 2
		fi
		;;
		--[A-z]*)
		OPTIONS="$OPTIONS $1"
		shift;;
		*.[ci] | \
		*.cc|*.cp|*.cxx|*.cpp|*.CPP|*.c++*|.C,ii | \
		*.f|*.for|*.ftn|*.F|*.FOR|*.fpp|*.FPP|*.FTN| \
		*.f90|*.f95|*.f03|*.f08|*.F90|*.F95|*.F03|*.F08 | \
		*.s|*.S|*.sx | \
		*.o)
		SOURCES="$SOURCES $1"
		shift;;
		*)
		shift;;
	esac
done

[ -z "$SOURCES" ] && exit 0

case $NETDEV in
	UDP | udp)
		LIBS="$LIBS $LIBS_UDP"
		;;
	INFINIBAND | inifiniband | IB | ib)
		LIBS="$LIBS $LIBS_IB"
		;;
	TOFU | tofu)
		LIBS="$LIBS $LIBS_TOFU"
		;;
	*)
		echo "${COMMAND}: Error: unsupported network device is given."
		exit 1
		;;
esac

##### COMPILE #####
if test "$MODE" = 'link'; then
	$COMPILER -I $INCLUDEDIR $OPTIONS -o $OUTFILE $SOURCES -L $LIBDIR $LIBS
else
	$COMPILER -I $INCLUDEDIR $OPTIONS -c -o $OUTFILE $SOURCES
fi
